{{> header}}

<main>
    <div class="ctcx">Chi tiết chuyến xe</div>
    <div class="container">
        <!-- <div class ="ctcx">Chi tiết chuyến xe</div> -->
        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {{#each imgCar}}
                <div class="carousel-item active">
                    <img src={{this}} class="d-block" alt={{this}}>
                </div>
                {{/each}}
                {{!-- <div class="carousel-item">
                    <img src="/img/2.jpg" class="d-block " alt="2">
                </div>
                <div class="carousel-item">
                    <img src="/img/3.jpg" class="d-block" alt="3">
                </div> --}}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            <div class="small-img">
                {{#each imgCar}}
                <img src={{this}} class="small" alt={{this}}>
                {{!-- <img src="/img/2.jpg" class="small" alt="">
                <img src="/img/3.jpg" class="small" alt=""> --}}
                {{/each}}
            </div>

        </div>
        <div class="detail2">
            <div class="name">Nhà xe {{name}}</div>
            <div class="type">Loại xe: xe Limousine 9 chỗ</div>
            <div class="fromto">Điểm đón:</div>
            {{#each fromPlace}}
            {{!-- <div class="fromto">(TP. Hồ Chí Minh) TP HCM <span>&#x27F6;</span> Quãng Ngãi (QN)</div> --}}
            <div class="fromto" style="font-size: 18px;">- {{places}}</div>
            {{/each}}
            <div class="fromto">Điểm trả:</div>
            {{#each toPlace}}
            {{!-- <div class="fromto">(TP. Hồ Chí Minh) TP HCM <span>&#x27F6;</span> Quãng Ngãi (QN)</div> --}}
            <div class="fromto" style="font-size: 18px;">- {{places}}</div>
            {{/each}}
        </div>

    </div>
    <div class="choose_seat">
        <span class="wanted">Sơ đồ chỗ ngồi</span>
        {{{ generateTypeOfCar type }}}
        <div class="price">
            <span>Tổng tiền: {{price}}đ</span>
            <button type="button" class="btn btn-danger">
                <a href="/info_form/{{id}}">
                    Đặt vé
                </a>
            </button>
        </div>

    </div>
    <div class="detail_nhaxe">
        <span>Thông tin nhà xe</span>
        <div class="chitietnhaxe">
            <p>- Tổng đài đặt vé & CSKH nhà xe {{name}} 24/7: {{phone}}.</p>
            {{#each address}}
            <p>- {{this}}</p>
            {{!-- <p>- Bến xe Giáp Bát: 0243 864 1919</p> --}}
            {{/each}}
        </div>

    </div>
    <div class="policy">
        <span>Chính sách</span>
        <div class="policy-detail">
            <p>An toàn Covid-19</p>
            <p>- Xuất trình Khai báo Y tế trước khi lên xe và tuân thủ quy tắc 5K của Bộ Y tế khi di chuyển</p>
            <p>- Cung cấp đầy đủ họ tên, số điện thoại, địa chỉ cư trú khi đặt vé</p>
            <p>- Yêu cầu đeo khẩu trang khi lên xe</p>
        </div>
        <div class="policy-detail">
            <p>An toàn Covid-19</p>
            <p>- Xuất trình Khai báo Y tế trước khi lên xe và tuân thủ quy tắc 5K của Bộ Y tế khi di chuyển</p>
            <p>- Cung cấp đầy đủ họ tên, số điện thoại, địa chỉ cư trú khi đặt vé</p>
            <p>- Yêu cầu đeo khẩu trang khi lên xe</p>
        </div>
    </div>
    <div class="rating">
        <span class="rate-overall">Đánh giá
            <span class="star">
                {{!-- <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-o"></i>
                <i class="fa fa-star-o"></i> --}}
                {{{generateStarList carOwnerStar}}}
            </span>
        </span>
        <form action="" class="write-comment" method="POST">
            <span>Viết đánh giá của bạn</span>
            <input type="hidden" id="parseUser" name="email">
            <span class="star">
                <!-- <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i> -->
                <input type="radio" name="ratestar" id="5-star" class="rate-by-star" value="5"> <label for="5-star"
                    class="star-label"><i class="fa fa-star"></i></label>
                <input type="radio" name="ratestar" id="4-star" class="rate-by-star" value="4"> <label for="4-star"
                    class="star-label"><i class="fa fa-star"></i></label>
                <input type="radio" name="ratestar" id="3-star" class="rate-by-star" value="3"> <label for="3-star"
                    class="star-label"><i class="fa fa-star"></i></label>
                <input type="radio" name="ratestar" id="2-star" class="rate-by-star" value="2"> <label for="2-star"
                    class="star-label"><i class="fa fa-star"></i></label>
                <input type="radio" name="ratestar" id="1-star" class="rate-by-star" value="1"> <label for="1-star"
                    class="star-label"><i class="fa fa-star"></i></label>
            </span>
            <input type="text" placeholder="Đánh giá...." name="content" class="cmt">
            <input type="submit" class="btn btn-danger">
        </form>
        {{#each rates}}
        <div class="rate">
            <span class="users">{{username}}</span>
            <span class="star">
                {{{generateStarList star}}}

            </span>
            <span class="comments">{{content}}</span>
        </div>
        {{/each}}
    </div>
</main>

{{> footer}}