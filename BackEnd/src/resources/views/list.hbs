{{> header}}

<main class="list_serach">
    <div class="search_info">
        <div class="info">
            <div class="info_place">
                TP. Hồ Chí Minh (HCM) <span>&#8594</span> Quảng Ngãi (QN)
            </div>
            <div class="info_other">
                T7, 07 Thg 1 2023 | 1 hành khách
            </div>
        </div>
        <button type="button" class="btn btn-primary btn_search_again">
            <a href="./">
                <ion-icon class="find_icon" name="search"></ion-icon>
                Đổi tìm kiếm
            </a>
        </button>
    </div>

    <div class="filter row">
        <p class="col-md-1">Bộ lọc</p>

        <div class="car_filter col-md-2">
            <select class="form-select" aria-label="Default select example">
                <option selected>Nhà xe</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <div class="car_type col-md-2">

            <select class="form-select col" aria-label="Default select example">
                <option selected>Loại xe</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <div class="cost_filter col-md-2">
            <select class="form-select col" aria-label="Default select example">
                <option selected>Giá tiền</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
    </div>

    <div class="list_ticket">
        {{#each list}}
        <div class="ticket">
            <div class="ticket_car ">
                <div class="car_name">
                    <img src="img/PT_logo.png" alt="Phuong Trang">
                    <span>{{carOwnerName}}</span>
                </div>
                <div class="chair">
                    Còn 30 chỗ trống
                </div>
            </div>
            <div class="ticket_time">
                <div class="time_from">
                    <p>{{timeStart}}</p>
                    <div class="where">{{from}}</div>
                </div>
                <div class="total_time">
                    <p>12h</p>
                    <div class="line"></div>
                </div>
                <div class="time_to">
                    <p>{{timeEnd}}</p>
                    <div class="where">{{to}}</div>
                </div>
            </div>
            <div class="ticket_price">
                <div class="price">
                    {{price}}<span>khách</span>
                </div>
                <button type="button" class="btn btn-primary btn_chose">
                    <a href="detail">
                        Chọn
                    </a>
                </button>
            </div>
        </div>
        {{/each}}
        
    </div>
</main>


