<main>
    <section class="container-fluid vh-100 vw-100 d-flex justify-content-center align-items-center">
        <div class="row wrapper">
            <div class="col col-md-6 col-sm-0 col-xs-0 img_signIn">
                <!-- <img class="img_signIn" src="/Front_End/Assets/Image/1.png" alt="Vexere" /> -->
            </div>
            <div
                class="col col-md-6 col-sm-12 col-xs-12 d-flex flex-column justify-content-center align-items-center p-3 form_wrapper">
                <a href="./" class="name">Vexere</a>

                <form class="form_signIn d-flex flex-column justify-content-center" id="signInForm" action="signIn"
                    method="POST">

                    <div class="form-group">
                        <span class="icon_input">
                            <ion-icon name="mail"></ion-icon>
                        </span>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                            pattern="^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$" placeholder="Email Address"
                            name="email" required>
                    </div>

                    <div class="form-group">
                        <span class="icon_input">
                            <ion-icon name="lock-closed"></ion-icon>
                        </span>
                        <input type="password" class="form-control" id="password" placeholder="Password" name="password"
                            required>
                        <span class="eye">
                            <ion-icon name="eye" size="small"></ion-icon>
                        </span>
                    </div>
                    <span class="errMess"></span>
                    <button type="submit" class="btn btn-primary btn-submit">
                        Sign In
                    </button>
                </form>

                <div class="mt-3 signUp">
                    Don't have an account!
                    <span>
                        <a href="signUp">
                            Sign Up
                        </a>
                    </span>
                </div>
            </div>
        </div>
    </section>
</main>