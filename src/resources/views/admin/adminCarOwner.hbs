<p>List CarOwner</p>
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each car}}
        <tr>
            <th scope="row" class="id">{{id}}</th>
            <td>{{name}}</td>
            <td>{{phone}}</td>
            <td class="action">
                <ion-icon name="create" onclick="show({{id}})"></ion-icon>
                <a href="/admin/deleteCarOwner/{{id}}"><ion-icon name="trash" onclick="deleteCar()"></ion-icon></a>
            </td>
        </tr>
        <tr class="detail detail_{{id}}" hidden>
            <th scope="row" class="id"></th>
            <td colspan="3">
                <form id="myform1" action="/admin/updateCarOwner/{{id}}" method="POST">
                    <input type="hidden" value="{{type}}" name="typeSelected">
                    <div class="row">
                        <div class="col">
                            <label>Name</label>
                            <input type="text" class="form-control form_name" value="{{name}}" name="name">
                        </div>
                        <div class="col">
                            <label>Phone</label>
                            <input type="text" class="form-control form_phone" value="{{phone}}" name="phone">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Address</label>
                            <input type="text" class="form-control form_address" value="{{address}}" name="address">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Logo Image Link</label>
                            <input type="text" class="form-control form_img" value="{{imgLogo}}" name="imgLogo">
                        </div>
                        <div class="col">
                            <label>Type of car</label>
                            <select name="type" class="form-control type" id="type" required>
                                <option value="9">9</option>
                                <option value="22">22</option>
                                <option value="32">32</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn-primary btnSave">Save</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="form_wrapper">
    <p>Add more CarOwner</p>
    <form id="myform2" action="/admin/addCarOwner" method="POST">
        <div class="row">
            <div class="col">
                <label>Name</label>
                <input type="text" class="form-control form_name" name="name" required>
            </div>
            <div class="col">
                <label>Phone</label>
                <input type="text" class="form-control form_phone" name="phone" required>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Address</label>
                <input type="text" class="form-control form_address" name="address" required>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Logo Image Link</label>
                <input type="text" class="form-control form_img" name="imgLogo" required>
            </div>
            <div class="col">
                <label>Type of car</label>
                <input type="number" class="form-control form_type" name="type" required>
            </div>
        </div>
        <button type="submit" class="btn-primary btnAdd">Add</button>
    </form>
</div>