<p>List Seat</p>
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ticket ID</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">Booking ID</th>
            <th scope="col">User</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each seat}}
        <tr>
            <th scope="row" class="id">{{id}}</th>
            <td>{{idTicket}}</td>
            <td>{{fromPlace}}</td>
            <td>{{toPlace}}</td>
            <td>{{idBooking}}</td>
            <td>{{idUser}}</td>
            <td class="action">
                <ion-icon name="create" onclick="show({{id}})"></ion-icon>
            </td>

        </tr>
        <tr class="detail detail_{{id}}" hidden>
            <th scope="row" class="id"></th>
            <td colspan="5">
                <form id="myform1" action="/admin/updateSeat/{{id}}" method="POST">
                    <input type="hidden" value="{{fromID}}" name="fromSelected">
                    <input type="hidden" value="{{toID}}" name="toSelected">
                    <div class="row">
                        <div class="col">
                            <label>From Place</label>
                            <select name="fromPlace" class="form-select fromPlaces_option" required>
                                {{!-- <option selected value="">Vui lòng chọn điểm đón</option> --}}
                                {{#each fromList}}
                                <option value={{id}}>{{places}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col">
                            <label>To Place</label>
                            <select name="toPlace" class="form-select toPlaces_option" required>
                                {{!-- <option selected value="">Vui lòng chọn điểm trả</option> --}}
                                {{#each toList}}
                                <option value={{id}}>{{places}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn-primary btnSave">Save</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>