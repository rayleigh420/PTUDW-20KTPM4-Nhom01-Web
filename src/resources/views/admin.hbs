<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each car}}
        <tr>
            <th scope="row" class="id">{{id}}</th>
            <td>{{name}}</td>
            <td>{{phone}}</td>
            <td class="action">
                <ion-icon name="create" onclick="show({{id}})"></ion-icon>
                <a href="car/api/deleteCarOwner/{{id}}"><ion-icon name="trash"></ion-icon></a>
            </td>
        </tr>
        <tr class="detail detail_{{id}}" hidden>
            <th scope="row" class="id">Detail</th>
            <td colspan="3">
                <form id="myform" action="/api/sengrid" method="POST">
                    <div class="row">
                        <div class="col">
                            <label>Name</label>
                            <input type="text" class="form-control form_name" value="{{name}}" name="name">
                        </div>
                        <div class="col">
                            <label>Phone</label>
                            <input type="text" class="form-control form_phone" value="{{phone}}" name="phone">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Address</label>
                            <input type="text" class="form-control form_address" value="{{address}}" name="address">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label>Logo Image Link</label>
                            <input type="text" class="form-control form_img" value="{{imgLogo}}" name="imgLogo">
                        </div>
                    </div>
                    <button type="submit" class="btn-primary btnSave">Save</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>